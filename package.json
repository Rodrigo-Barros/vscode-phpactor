{
    "name": "vscode-phpactor",
    "version": "1.0.1",
    "description": "Phpactor PHP Language Server extension for vscode",
    "main": "lib/extension.js",
    "publisher": "dantleech",
    "engines": {
        "vscode": "^1.43.0"
    },
    "keywords": [
        "vscode",
        "php",
        "phpactor"
    ],
    "scripts": {
        "clean": "rimraf lib",
        "build": "tsc -p tsconfig.json",
        "prepare": "yarn clean && yarn build",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "compile": "tsc -p ./",
        "test": "node ./lib/test/runTests.js"
    },
    "activationEvents": [
        "onLanguage:php"
    ],
    "contributes": {
        "commands": [
            {
                "command": "phpactor.reindex",
                "title": "Phpactor: Reindex the project."
            },
            {
                "command": "phpactor.config.dump",
                "title": "Phpactor: Dump config"
            },
            {
                "command": "phpactor.services.list",
                "title": "Phpactor: List Phpactor's currently running services."
            },
            {
                "command": "phpactor.status",
                "title": "Phpactor: Show Phpactor's status"
            }
        ],
        "configuration": {
            "title": "phpactor config",
            "properties": {
                "phpactor.path": {
                    "type": "string",
                    "default": "phpactor",
                    "description": "phpactor bin path"
                },
                "phpactor.enable": {
                    "type": "boolean",
                    "default": true,
                    "description": "enable phpactor language server"
                },
                "phpactor.config": {
                    "type": "object",
                    "default": {},
                    "description": "standard phpactor configuration"
                }
            }
        }
    },
    "icon": "images/logo.png",
    "author": "daniel@dantleech.com",
    "license": "MIT",
    "devDependencies": {
        "@chemzqm/tsconfig": "^0.0.3",
        "@chemzqm/tslint-config": "^1.0.18",
        "@types/glob": "^7.1.1",
        "@types/mocha": "^9.1.0",
        "@types/node": "^11.13.10",
        "@types/vscode": "1.43.0",
        "@typescript-eslint/eslint-plugin": "^5.19.0",
        "@typescript-eslint/parser": "^5.19.0",
        "@vscode/test-electron": "^1.6.1",
        "eslint": "^8.13.0",
        "glob": "^7.1.4",
        "mocha": "^9.2.2",
        "rimraf": "~3.0.2",
        "source-map-support": "^0.5.12",
        "ts-loader": "~8.0.2",
        "tslib": "^2.1.0",
        "tslint": "^5.16.0",
        "typescript": "^4.6.3",
        "vscode-test": "~1.4.0",
        "webpack": "^4.34.0",
        "webpack-cli": "^3.3.4"
    },
    "dependencies": {
        "vscode-languageclient": "^6.1.3"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/phpactor/vscode-phpactor"
    }
}
